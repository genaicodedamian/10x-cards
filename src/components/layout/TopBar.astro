---
// src/components/layout/TopBar.astro
// TODO: Implementacja TopBar zgodnie z planem UI (logo, menu użytkownika dla zalogowanych)
import UserMenu from "@/components/UserMenu.astro"; // Using alias for UserMenu
const user = Astro.locals.user; // Reverted to Astro.locals.user as per original and linter feedback
---

<header
  class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container flex h-14 max-w-screen-2xl items-center">
    <div class="mr-4 flex">
      <a class="mr-6 flex items-center space-x-2" href="/">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" class="h-6 w-6">
          <rect width="256" height="256" fill="none"></rect>
          <line
            x1="208"
            y1="128"
            x2="128"
            y2="208"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="16"></line>
          <line
            x1="192"
            y1="40"
            x2="40"
            y2="192"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="16"></line>
        </svg>
        <span class="font-bold sm:inline-block">10x-cards</span>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <a
        href="https://github.com/genaicodedamian/10x-cards"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center text-sm font-medium text-muted-foreground transition-colors hover:text-primary"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="mr-2 h-5 w-5"
        >
          <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
          <path d="M9 18c-4.51 2-5-2-7-2" />
        </svg>
        GitHub
      </a>
      {
        user && user.email ? (
          <UserMenu userEmail={user.email} />
        ) : (
          <a href="/login" class="text-sm font-medium text-muted-foreground transition-colors hover:text-primary">
            Zaloguj się
          </a>
        )
      }
    </div>
  </div>
</header>
