---
import TopBar from "@/components/layout/TopBar.astro";
import "@/styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="10x-cards application" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - 10x-cards</title>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <TopBar />
    <main
      class="container mx-auto flex min-h-[calc(100vh-var(--header-height)-1px)] flex-col items-center justify-center px-4 py-8"
    >
      <slot />
    </main>
  </body>
</html>
